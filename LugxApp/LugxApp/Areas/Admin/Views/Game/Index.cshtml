@using LugxApp.ViewModels.GameVMs
@model List<GameGetVM>

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Games</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <a asp-action="Create" class="btn btn-primary">Create</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Genre</th>
                            <th>Price</th>
                            <th>Discount</th>
                            <th>Actions</th>
                        </tr>
                    </thead>

                    <tbody>

                        @foreach (GameGetVM item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>
                                    <img width="60" height="60" src="@item.ImagePath"/>
                                </td>
                                <td>@item.Name</td>
                                <td>@item.Genre.Name</td>
                                <td>@item.Price</td>
                                <td>@item.Discount</td>
                                <td>
                                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->